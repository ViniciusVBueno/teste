generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  email    String   @id @default(cuid())
  name     String
  password String
  tasks    Task[]

  @@map("users")  /// considerar esse nome da tabela 
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  status      Boolean
  date        DateTime     ///arrumar uma forma para que a hora n√£o seja considerada nese campo
  descricao   String
  userEmail   String
  user        Usuario  @relation(fields: [userEmail], references: [email])

  @@map("tasks")  /// considerar esse nome da tabela 
}
