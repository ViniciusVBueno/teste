generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  email    String   @id @default(cuid())
  name     String
  password String
  tasks    Task[]

  @@map("users")
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  status      Boolean
  date          DateTime @default(now()) @db.Date
  description   String?
  userEmail   String
  user        Usuario  @relation(fields: [userEmail], references: [email], onDelete: Cascade)

  @@map("tasks")
}

model List {
  id          Int      @id @default(autoincrement())
  name        String?

  @@map("list")
}

model Tag {
  id    Int    @id @default(autoincrement())
  name  String?

  @@map("tags")
}