generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  name     String   
  password String
  tasks    Task[]
  lists    List[]

  @@map("users")
}

model Task {
  id            Int      @id @default(autoincrement())
  title         String
  status        Boolean
  date          DateTime @default(now()) @db.Date
  description   String?
  userId        Int
  listId        Int?
  tagId         Int?
  user          Usuario  @relation(fields: [userId], references: [id], onDelete: Cascade)
  list          List?    @relation(fields: [listId], references: [id])
  tag           Tag?     @relation(fields: [tagId], references: [id])

  @@map("tasks")
}

model List {
  id          Int      @id @default(autoincrement())
  name        String?
  userId      Int
  user        Usuario  @relation(fields: [userId], references: [id])
  tasks       Task[]

  @@map("lists")
}

model Tag {
  id    Int      @id @default(autoincrement())
  name  String?
  tasks Task[]

  @@map("tags")
}
